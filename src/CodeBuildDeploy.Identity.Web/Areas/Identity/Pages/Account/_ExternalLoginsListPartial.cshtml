@model ExternalLoginListViewModel

@{
    if ((Model.ExternalLogins?.Count ?? 0) > 0)
    {
        <form id="externalLoginForm" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <input type="hidden" id="provider" name="provider" value="Microsoft" />
            <ul class="list-inline text-center mb-4">
            @foreach (var p in Model.ExternalLogins)
            {
                if (p.Name == "Microsoft")
                {
                    <li class="list-inline-item g-mx-2">
                        <a class="u-icon-v1 u-icon-size--sm u-icon-slide-up--hover g-color-white g-bg-skype rounded-circle" href="javascript:$('#provider').val('@p.Name');$('#externalLoginForm').submit();">
                            <i class="g-font-size-default g-line-height-1 u-icon__elem-regular fa fa-skype"></i>
                            <i class="g-font-size-default g-line-height-0_8 u-icon__elem-hover fa fa-skype"></i>
                        </a>
                    </li>
                }
                else if (p.Name == "Google")
                {
                    <li class="list-inline-item g-mx-2">
                        <a class="u-icon-v1 u-icon-size--sm u-icon-slide-up--hover g-color-white g-bg-google-plus rounded-circle" href="javascript:$('#provider').val('@p.Name');$('#externalLoginForm').submit();">
                            <i class="g-font-size-default g-line-height-1 u-icon__elem-regular fa fa-google"></i>
                            <i class="g-font-size-default g-line-height-0_8 u-icon__elem-hover fa fa-google"></i>
                        </a>
                    </li>
                }
                else if (p.Name == "Facebook")
                {
                    <li class="list-inline-item g-mx-2">
                        <a class="u-icon-v1 u-icon-size--sm u-icon-slide-up--hover g-color-white g-bg-facebook rounded-circle" href="javascript:$('#provider').val('@p.Name');$('#externalLoginForm').submit();">
                            <i class="g-font-size-default g-line-height-1 u-icon__elem-regular fa fa-facebook"></i>
                            <i class="g-font-size-default g-line-height-0_8 u-icon__elem-hover fa fa-facebook"></i>
                        </a>
                    </li>
                }
            }
            </ul>
        </form>
    }
}
