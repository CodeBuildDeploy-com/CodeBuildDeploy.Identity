@page
@model LoginModel

<!-- Login -->
<section class="container g-py-150">
    <div class="row justify-content-center">
        <div class="col-sm-8 col-lg-6">
            <div class="g-brd-around g-brd-gray-light-v4 rounded g-py-40 g-px-30">
                <header class="text-center mb-4">
                    <h2 class="h2 g-color-black g-font-weight-600">Sign In</h2>
                </header>

                <!-- Form -->
                <form id="account" method="post" class="g-py-15" role="form">

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="mb-4">
                        <div class="input-group g-brd-primary--focus">
                            <div class="input-group-prepend">
                                <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-finance-067 u-line-icon-pro"></i></span>
                            </div>
                            <input asp-for="Input.Email" class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-py-15 g-px-15" placeholder="johndoe@gmail.com" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="g-mb-35">
                        <div class="input-group g-brd-primary--focus mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-media-094 u-line-icon-pro"></i></span>
                            </div>
                            <input asp-for="Input.Password" type="password" class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-py-15 g-px-15" , placeholder="Password" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="row justify-content-between">
                            <div class="col align-self-center">
                                <label class="form-check-inline u-check g-color-gray-dark-v5 g-font-size-12 g-pl-25 mb-0">
                                    <input asp-for="Input.RememberMe" type="checkbox" class="g-hidden-xs-up g-pos-abs g-top-0 g-left-0" />
                                    <div class="u-check-icon-checkbox-v6 g-absolute-centered--y g-left-0">
                                        <i class="fa g-rounded-2" data-check-icon="&#xf00c"></i>
                                    </div>
                                    Keep signed in
                                </label>
                            </div>
                            <div class="col align-self-center text-right">
                                <a class="g-font-size-12" href="#">Forgot password?</a>
                            </div>
                        </div>
                    </div>

                    <div class="mb-5">
                        <button class="btn btn-md btn-block u-btn-primary g-py-13" type="submit">Login</button>
                    </div>
                </form>
                <!-- End Form -->

                <!-- Form Social Icons -->
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = @Model.ReturnUrl, ExternalLogins = @Model.ExternalLogins })
                <!-- End Form Social Icons -->

                <div class="d-flex justify-content-center text-center g-mb-30">
                    <div class="d-inline-block align-self-center g-width-50 g-height-1 g-bg-gray-light-v1"></div>
                    <span class="align-self-center g-color-gray-dark-v3 mx-4">OR</span>
                    <div class="d-inline-block align-self-center g-width-50 g-height-1 g-bg-gray-light-v1"></div>
                </div>

                <footer class="text-center">
                    <p class="g-color-gray-dark-v5 g-font-size-13 mb-0">
                        Don't have an account?  <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="g-font-weight-600">signup</a>
                    </p>
                </footer>
            </div>
        </div>
    </div>
</section>
<!-- End Login -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
